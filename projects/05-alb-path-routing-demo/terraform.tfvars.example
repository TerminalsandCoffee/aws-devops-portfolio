# Example Terraform Variables File
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "alb-path-routing-demo"
environment   = "dev"

# VPC Configuration
vpc_cidr         = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# EC2 Key Pair (optional - leave empty if not using SSH/RDP)
# Create a key pair in EC2 Console first, then use the name here
key_name = "my-key-pair"

# Instance Configuration
linux_instance_type   = "t3.micro"
windows_instance_type = "t3.medium"
windows_instance_count = 2  # Number of Windows instances for App2 (high availability)

# Common Tags
common_tags = {
  Project     = "ALB-Path-Routing-Demo"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Owner       = "DevOps-Team"
  CostCenter  = "Engineering"
}

